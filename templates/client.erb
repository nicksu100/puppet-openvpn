client
remote <%= @remote_ip %> <%= @remote_port %> 
proto <%= @proto %>
dev <%= @tun_dev %>
<% if @tap %>
dev-type tap
<% end -%>
ca /etc/puppet/ssl/certs/ca.pem
cert /etc/puppet/ssl/certs/<%= @fqdn %>.pem
key /etc/puppet/ssl/private_keys/<%= @fqdn %>.pem
tls-client
tls-auth ta.key 1
<% if operatingsystem == "FreeBSD" %>
user openvpn 
group openvpn 
<% elsif operatingsystem == "OpenBSD" %>
user _openvpn
group _openvpn
<% else %>
user nobody
group nogroup 
<% end %>
persist-tun
persist-key
keepalive 10 60
verb 3
